{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "types": ["bun-types", "node"],
    "noEmit": true
  },
  "include": ["src/**/*", "example/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "example-build",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ]
}
